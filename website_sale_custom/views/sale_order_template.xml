<odoo>

    <template id="sale_order_template_inherit" inherit_id="sale.portal_my_orders"> 
        <xpath expr="//th[4]" position="after">
            <th class="test-right">Reorder</th>
        </xpath>
        <xpath expr="//td[4]" position="after">
            <td class="text-left">
                <a t-att-href="'/reorder_website?order_id=%s' % order.id" role="button" class="btn btn-primary"> Reorder </a>
            </td>
        </xpath>
    </template> 

</odoo>
